<!DOCTYPE html>
<html>
  <head>
<%#= init_tinymce_hammer_if_required %>
<%#= tinyMCE.init({:force_p_newlines =>"true"})   %>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
<%#= javascript_include_tag :defaults, 'jquery-ui-1.8.10.custom.min.js','jrails.js','jquery.min.js','tiny_mce/tiny_mce.js' %>
    <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" %>
    <%= javascript_include_tag "rails" %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <%= link_to image_tag("awlogo52.gif"), root_path %>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
      <!--  <nav class="round" style="font-color:solid white;font-size:12px;font-weight:bold;"> -->
      <nav id="nav">
          <ul>
            <li><%= link_to "Top Stories      ", root_path %></li>
            <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
            <li><%= link_to "Retirees     ", retiree_path %></li>
             <li>&nbsp;&nbsp;</li>
            <% if signed_in? %>
              <% if false%>
                <li> <%= link_to "Profile", current_user %> </li>
                <li><%= link_to "Users", users_path %></li>
                <li><%=link_to "Moderate Comments", comments_path  if current_user.admin? %></li>
              <% end %>
              <li><%= link_to "Post Story", poststory_path %></li>
               <li>&nbsp;</li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <% end %>
          </ul>
        </nav>
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
