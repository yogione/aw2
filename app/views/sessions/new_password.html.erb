<h1>Sign in</h1>
<div class="round" style="background-color: lightgray;width:50%;padding:5%;">
<%= form_for(:session, :url =>  reset_new_password_sessions_path( :user_id => @user.id )) do |f| %>
   <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<p>forgot password? <%= link_to "forgot password", forgot_password_sessions_url %></p>
</div>