<h1>Sign up</h1>
<div class="round" style="background-color: lightgray;width:50%;padding:5%;">
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= render 'fields', :f => f %>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>  
<% end %>
</div>